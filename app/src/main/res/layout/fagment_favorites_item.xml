<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imgShowFavorite"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imgShowFavorite"
            android:layout_toRightOf="@id/imgShowFavorite"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFvorite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="113dp"
            android:layout_marginLeft="113dp"
            android:layout_toEndOf="@id/titleTv"
            android:layout_toRightOf="@id/titleTv"
            android:background="@drawable/letter_x_icon_11_256"
            android:theme="@style/YourColorButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/showImg"
            app:layout_constraintTop_toBottomOf="@+id/showEpisodes" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>


